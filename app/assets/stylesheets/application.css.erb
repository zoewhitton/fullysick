body {padding-top: 50px; background:#eee; color: #222; font-family:'Raleway'}

.body-container {margin:50px auto;}

/*-----------------------navbar-----------------------*/
.navbar-brand {font-family: 'Raleway', sans-serif; font-weight:600; font-size:24px;}
  .navbar-brand:visited, .navbar-brand:hover, .navbar-brand:link {color: #39a8d2;}
  #brand:hover{color:blue;}
#doctor-button {padding:7px 10px; background:#fba47e; color: #eee; font-weight:700; border-radius:7px; text-transform:uppercase; }
/*----------------------home page -----------------------*/
.question {padding-top:85px; text-align:center; height: 230px; color: white; background-image: url(<%= asset_path 'tardis.png' %>); background-position:top;}
.question-arrow {padding-top:0px; text-align:center;}
.home-buttons {background:#fff; padding-top:30px; padding-bottom:40px;}
  .smew {background:#aaa;}
  .button-box {text-align:center;}
    .zpanel, .zpanel-appt, .zpanel-dr, .zpanel-patient {
      padding:40px 50px;
      height:200px;
      width: 280px;
      background:#999;
      text-align:center;
      color: #eee;
      font-family: Sans-serif;
      font-size: 40px;
      line-height: 60px;
      border: 1px solid #ddd;
      transition: all 0.3s ease 0s;
      opacity: 0.8;
      white-space: normal;
      margin-top:10px;
      text-shadow: 1px 1px #666;
    }
      .zpanel-appt {background-image: url(<%= asset_path 'daleks.jpg' %>); background-position:bottom;}
      .zpanel-dr {background-image: url(<%= asset_path 'AmyRory.jpg' %>);}
      .zpanel-patient {background-image: url(<%= asset_path 'tardis2.jpg' %>)}
      .zpanel-appt:hover, .zpanel-dr:hover, .zpanel-patient:hover {
        opacity: 1;
        color: #fff;
      }
      .button-box a:visited {
        color: #eee;
      }

/*---------------------------------------Show-------------------------------*/
.show-box{padding:15px 50px 20px 50px;}

/*----------------------Doctor View-----------------------------*/
.doctor-view{margin-top:20px;}
.doctor-image{height:200px; margin:10px 0px 10px 0px; overflow:hidden; text-align:center;}
  .doctor-image-file {border-radius:5px;}
.doctor-bio {height:120px;}

.flickr_pagination {
text-align: center;
padding: 0.3em;
cursor: default; }
.flickr_pagination a, .flickr_pagination span, .flickr_pagination em {
  padding: 0.2em 0.5em; }
.flickr_pagination .disabled {
  color: #aaaaaa; }
.flickr_pagination .current {
  font-style: normal;
  font-weight: bold;
  color: #ff0084; }
.flickr_pagination a {
  border: 1px solid #dddddd;
  color: #0063dc;
  text-decoration: none; }
  .flickr_pagination a:hover, .flickr_pagination a:focus {
    border-color: #003366;
    background: #0063dc;
    color: white; }
.flickr_pagination .page_info {
  color: #aaaaaa;
  padding-top: 0.8em; }
.flickr_pagination .previous_page, .flickr_pagination .next_page {
  border-width: 2px; }
.flickr_pagination .previous_page {
  margin-right: 1em; }
.flickr_pagination .next_page {
  margin-left: 1em; }
