<div class="row">
  <div class="col-md-6 col-md-offset-0">
  <%= simple_form_for(@enquiry) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <div class="row">
        <div class="col-md-5">
          <h4>Your details</h4>
          <%= f.input :email %>
          <%= f.input :name %>
          <%= f.input :phone %>
        </div>
        <div class="col-md-5 col-md-offset-1">
          <h4>Your Enquiry</h4>
          <%= f.input :message, :input_html => {:rows => 5} %>
          <%= f.input :enquiry_type, collection: ['Appointment query', 'Cancellation', 'Website error', 'Other'] %>
        </div>
      </div>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  <% end %>
</div>
</div>
