<div id="row">
  <%= simple_form_for(@patient) do |f| %>
    <%= f.error_notification %>
      <div class="col-md-6">
            <h3>Patient details</h2>
            <%= f.input :first_name %>
            <%= f.input :last_name %>
            <%= f.input :phone %>
            <%= f.input :medicare_number %>
      </div>
      <div class="col-md-6">
            <h3>Address</h2>
            <%= f.input :street_address %>
            <%= f.input :suburb %>
            <%= f.input :state, collection: ['QLD', 'NSW', 'VIC'] %>
            <%= f.input :postcode %>

              <%= f.button :submit, class: "btn btn-warning pull-right" %>
      </div>
</div>
<div class="row">
    <div class="col-md-12">
      <br>
      <div class="form-actions">
      </div>
    </div>
  <% end %>
</div>
